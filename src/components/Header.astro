---
const navLinks = [
  { text: "Home", href: "/" },
  { text: "Tools", href: "#tools" },
  { text: "Tax Rates", href: "#tax-rates" },
  { text: "FAQ", href: "#faq" },
  { text: "Contact", href: "/contact" }
];
---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/">
        <span class="logo-text">Unemployment Cost Optimization</span>
        <span class="logo-short">(us4u)</span>
      </a>
    </div>

    <nav class="nav-menu">
      <ul>
        {navLinks.map(link => (
          <li>
            <a href={link.href}>{link.text}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: var(--card-background);
    box-shadow: 0 1px 3px var(--card-border);
    z-index: 100;
    padding: 1rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    text-decoration: none;
    color: var(--text-color);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .logo-short {
    color: var(--primary-color);
    font-weight: 500;
  }

  .nav-menu ul {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-menu a {
    color: var(--text-color);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav-menu a:hover {
    color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .logo-text {
      display: none;
    }

    .nav-menu {
      display: none;
    }
  }
</style> 