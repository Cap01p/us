---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Contact Us | Us4U - Unemployment Cost Management"
  description="Get in touch with Us4U for questions about unemployment cost management, claims assistance, or general inquiries."
>
  <main class="contact-page">
    <div class="container">
      <nav class="breadcrumb">
        <a href="/">Home</a> / Contact Us
      </nav>
      
      <h1>Contact Us</h1>
      
      <div class="content">
        <div class="contact-grid">
          <div class="contact-info">
            <section>
              <h2>Get in Touch</h2>
              <p>Have questions about unemployment cost management? We're here to help!</p>
              
              <div class="contact-methods">
                <div class="method">
                  <h3>Email</h3>
                  <a href="mailto:support@us4u.us">support@us4u.us</a>
                </div>
                
                <div class="method">
                  <h3>Phone</h3>
                  <a href="tel:+1234567890">(123) 456-7890</a>
                </div>
                
                <div class="method">
                  <h3>Office Hours</h3>
                  <p>Monday - Friday<br />9:00 AM - 5:00 PM EST</p>
                </div>
              </div>
            </section>
          </div>

          <div class="contact-form">
            <h2>Send us a Message</h2>
            <form id="contact-form" class="form">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required />
              </div>

              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required />
              </div>

              <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" id="subject" name="subject" required />
              </div>

              <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" name="message" rows="5" required></textarea>
              </div>

              <button type="submit" class="submit-button">Send Message</button>
            </form>
          </div>
        </div>

        <div class="related-links">
          <h3>Related Information</h3>
          <ul>
            <li><a href="/privacy">Privacy Policy</a></li>
            <li><a href="/terms">Terms of Service</a></li>
          </ul>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .contact-page {
    padding: 4rem 2rem;
    background-color: var(--background-color);
    min-height: 80vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .breadcrumb {
    margin-bottom: 2rem;
    color: var(--text-color);
    opacity: 0.8;
  }

  .breadcrumb a {
    color: var(--primary-color);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--text-color);
  }

  .content {
    background: var(--card-background);
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px var(--card-border);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .contact-methods {
    margin-top: 2rem;
  }

  .method {
    margin-bottom: 1.5rem;
  }

  .method h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--text-color);
  }

  .method a, .method p {
    color: var(--text-color);
    opacity: 0.9;
    text-decoration: none;
  }

  .method a:hover {
    color: var(--primary-color);
  }

  .form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    color: var(--text-color);
    font-weight: 500;
  }

  input, textarea {
    padding: 0.75rem;
    border: 1px solid var(--card-border);
    border-radius: 0.5rem;
    background: var(--background-color);
    color: var(--text-color);
  }

  input:focus, textarea:focus {
    outline: none;
    border-color: var(--primary-color);
  }

  .submit-button {
    background-color: var(--primary-color);
    color: white;
    padding: 1rem;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .submit-button:hover {
    background-color: #1d4ed8;
  }

  .related-links {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--card-border);
  }

  .related-links h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .related-links ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .related-links a {
    color: var(--primary-color);
    text-decoration: none;
    display: inline-block;
    margin-bottom: 0.5rem;
  }

  .related-links a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .contact-page {
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Add your form submission logic here
    // For example, sending to an API endpoint
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    
    try {
      // Replace with your actual API endpoint
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });
      
      if (response.ok) {
        alert('Message sent successfully!');
        form.reset();
      } else {
        throw new Error('Failed to send message');
      }
    } catch (error) {
      alert('Failed to send message. Please try again later.');
      console.error('Error:', error);
    }
  });
</script> 